<!-- Maps Section -->
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<section id="maps" style="padding-top:0px;">
<div class="container text-center">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Map</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
    </div>
    <div class="row">
		<div class="col-md-6">
		<!-- Real Map -->
  		<div id="map" style='width: 100%; height: 400px;'></div><!--/ Real Map-->
		<!--API testing-->
		<form action="/map" method="get" class="form-horizontal">
			<input type="hidden" name="_zwsid" value="X1-ZWz1az100jazgr_82rpe">
			<input type="text" class="form-control" name="_streetaddress" placeholder="Enter the Street Address"> <!-- use.join("+") -->
			<input type="text" class="form-control" name="_city" placeholder="Enter the City">
			<input type="text" class="form-control" name="_state" placeholder="Enter the State">
			<input type="submit" class="btn btn-success" value="Search a Home">
		</form><!--/ API testing-->
		</div>
		<div class="col-md-6 fixed-height">
			<h3>You have searched:</h3>
			<img src="<%= @imgsrc %>" alt="Picture for <%= @address %>" />
			<h5><%= @address %></h5>
			<h7>Neighborhood: <%= @neighborhood%></h7>
			<h7>School District: < %= @schooldistrict%></h7>
			<!--Listing Info-->
			<div class="col-md-6">
			<table class="table table-stripped">
				<tr>
					<td>Rooms</td>
					<td>< %= @roomtype %></td>
				</tr>
				<tr>
					<td>Sq. Ft.</td>
					<td>< %= @sqft %></td>
				</tr>
				<tr>
					<td>Lot Sq. Ft.</td>
					<td>< %= @lotsqft %></td>
				</tr>
				<tr>
					<td>Family Size</td>
					<td>< %= @familysize %></td>
				</tr>
				<tr>
					<td>Year Built</td>
					<td>< %= @yearbuilt %></td>
				</tr>
				<tr>
					<td>Roof</td>
					<td>< %= @roof %></td>
				</tr>
				<tr>
					<td>Heating System</td>
					<td>< %= @heatingsystem %></td>
				</tr>
			</table>
			</div>
			<div class="col-md-6">
			<table class="col-md-3 table table-stripped">
				<tr>
					<td>Bedroom Count</td>
					<td>< %= @bedrooms %></td>
				</tr>
				<tr>
					<td>Bathroom Count</td>
					<td>< %= @bathrooms %></td>
				</tr>
				<tr>
					<td>Last Sold Date</td>
					<td>< %= @lastsolddate %></td>
				</tr>
				<tr>
					<td>Last Sold Price</td>
					<td>< %= @lastsoldprice %></td>
				</tr>
				<tr>
					<td>Number of Floors</td>
					<td>< %= @numoffloors %></td>
				</tr>
				<tr>
					<td>Year Updated</td>
					<td>< %= @yearupdated %></td>
				</tr>
			</table>
			</div><!--/End Listing Info-->
			
			<!-- Monthly Overhead Form-->
			<form action="#" method="get" class="form-horizontal">
				<input type="text" class="form-control" name="_monthlymortage" placeholder="Monthly Mortage">
				<input type="text" class="form-control" name="_annualtaxes" placeholder="Annual Taxes">
				<input type="text" class="form-control" name="_annualinsurance" placeholder="Annual Insurance">
				<input type="text" class="form-control" name="_monthlyexpense" placeholder="Monthly Expenses">
				<input type="submit" class="btn btn-default" value="Calculate">
			</form><!-- / Monthly Overhead Form-->

			<!-- Monthly Overhead Result-->
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h3 class="panel-title">Base monthly overhead</h3>
			  </div>
			  <div class="panel-body">
			    <h3>$1,467</h3>
			  </div>
			</div><!-- / Monthly Overhead Result-->


			<!-- Mortage Calculator Widget Starts -->
			<div id="horizontalWidget" style="width:370px;overflow:hidden;margin: 0 auto;text-align:center;font-family:verdana,arial,sans-serif;font-size:8pt;line-height:13x;background-color:#dbdbdb;letter-spacing:0;text-transform:none;border-radius: 5px;webkit-border-radius:5px;">
				<div style="margin:6px 0;">
					<a href="http://www.zillow.com/mortgage-calculator/" target="_blank" title="Mortgage Calculators on Zillow" style="font-family:Arial;font-size:15px;text-decoration:none;font-weight:bold;color:#666666;cursor: pointer;display: block;text-align: center;text-shadow: 0 1px #fff;">Estimate Payment</a>
				</div>
				<div style="width:352px;margin:0 auto;background-color:#f4f4f4;text-align:left; font-size:8pt;border-radius: 5px; border: 1px solid;border-color:#cccccc;webkit-border-radius: 5px;padding: 0 1px;">
					<iframe title="Mortgage Calculator" frameborder="0" height="235px" style="float:left;" scrolling="no" width="352px" src="http://www.zillow.com/mortgage/SmallMortgageLoanCalculatorWidget.htm?price=400000&wtype=spc&rid=102001&wsize=small&textcolor=666666&backgroundColor=f4f4f4&advTabColor=9b9b9b&bgcolor=dbdbdb&bgtextcolor=666666&headerTextShadow=fff&widgetOrientationType=horizontalWidget">
					</iframe>
				<div style="clear:both;"></div>
				</div>
				<div style="height:20px;">
					<span style="display:block;margin:0 auto;font-size:7pt;height:15px;width:178px;color:#666666;padding-top:2px;"><a href="http://www.zillow.com/mortgage-rates/" target="_blank" title="Zillow Mortgages" style="text-decoration:none;color:#3366bb;font-weight:normal;font-family:verdana,arial,sans-serif;font-size:7pt;color:#666666;">Zillow Mortgage Calculator</a>
					</span>
				</div>
			</div><!-- /Mortage Calculator Ends -->
		</div>
	</div>
</div>
</section>

<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	  markers = handler.addMarkers([
	    {
	      "lat": <%= @latitude %>,
	      "lng": <%= @longitude %>,
	      "picture": {
	        "url": "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
	        "width":  36,
	        "height": 36
	      },
	      "infowindow": "hello!"
	    }
	  ]);
	  handler.bounds.extendWith(markers);
	  handler.fitMapToBounds();
	});
</script>